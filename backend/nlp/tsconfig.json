{
  "include": ["api/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "umd",
    "esm",
    "out",
    "test",
    ".next",
    ".backup",
    "public",
    "storybook-static",
    "**/*.test.ts",
    "**/*.test.js"
  ],
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true, // Eases ESM support
    "types": ["node"],
    "allowSyntheticDefaultImports": true,
    "declaration": true,

    "strictNullChecks": false,
    "isolatedModules": false,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "@ps/nlp/*": ["./*"]
    },
    "rootDirs": ["./api", "./cli", "./common"],
    "outDir": "./esm"
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
