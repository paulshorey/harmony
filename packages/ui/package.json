{
  "name": "@spiral/ui",
  "version": "0.0.1",
  "license": "MIT",
  "main": "./index.tsx",
  "types": "./index.tsx",
  "scripts": {
    "format": "prettier --write \"**/*.{ts,tsx,md,js,jsx,json}\"",
    "lint": "eslint . --fix --ext .tsx,.ts,.js --quiet",
    "lint-staged": "lint-staged",
    "storybook": "start-storybook -p 6007",
    "test": "jest",
    "test:ci": "jest --testPathIgnorePatterns .storybook/imageShots.test.js",
    "type-check": "tsc --project tsconfig.json --pretty --noEmit"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint . --fix --ext .tsx,.ts,.js --quiet",
      "prettier . -w"
    ]
  },
  "dependencies": {
    "@spiral/utils": "*",
    "react-html-parser": "^2.0.2",
    "react-string-replace": "^1.1.0"
  },
  "devDependencies": {
    "@spiral/config": "*",
    "@styled-system/should-forward-prop": "^5.1.5",
    "@types/react-html-parser": "^2.0.2",
    "styled-system": "^5.1.5"
  }
}
