{
  // base config - common to all apps and modules in the repository:
  "extends": "@ps/constants/config/typescript/react-library.json",
  // specific overrides - for this project only:
  "exclude": ["node_modules", "dist", "out", ".next", ".backup", "public"],
  "compilerOptions": {
    "strict": false,
    "baseUrl": ".",
    "paths": {
      "@ps/ui/*": ["./*"]
    },
    "noEmit": true,
    "incremental": true,
    "noImplicitAny": false,
    "jsx": "preserve",
    "allowJs": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "pages/_document.js"]
}
