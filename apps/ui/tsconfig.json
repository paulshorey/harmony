{
  // base config - common to all apps and modules in the repository:
  "extends": "@ps/constants/config/typescript/react-library.json",
  // specific overrides - for this project only:
  "exclude": [
    "node_modules",
    "dist",
    "umd",
    "esm",
    "out",
    ".next",
    ".backup",
    "public",
    "storybook-static"
  ],
  "compilerOptions": {
    "strict": false,
    "baseUrl": ".",
    "paths": {
      "@ps/ui/*": ["./*"]
    },
    "noEmit": true,
    "incremental": true,
    "noImplicitAny": false,
    "jsx": "preserve",
    "allowJs": true
  },
  "include": ["**/*"]
}
